  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/michael-klein/funcy.js.git"
  },
  "keywords": [
    "functional",
    "hooks",
    "react",
    "web-components",
    "webcomponents",
    "preact"
  ],
  "author": "Michael Klein",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/michael-klein/funcy.js/issues"
  },
  "homepage": "https://github.com/michael-klein/funcy.js#readme",
  "dependencies": {
    "hookuspocus": "^1.1.4",
    "htm": "^2.0.0"
  },
  "devDependencies": {
    "rollup": "^1.1.2",
    "rollup-plugin-terser": "^4.0.2",
    "bundlewatch": "^0.2.1"
  },
  "bundlewatch": {
    "files": [
      {
        "path": "dist/*.min.js",
        "maxSize": "2kB"
      }
    ]
  }
