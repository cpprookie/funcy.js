{
  "name": "funcy-components",
  "version": "0.8.0",
  "description": "A functional web-components wrapper",
  "main": "dist/core.js",
  "directories": {
    "example": "examples"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "./node_modules/rollup/bin/rollup -c",
